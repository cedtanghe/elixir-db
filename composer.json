{
    "name": "elixir/elixir-db",
    "description": "Component database and ORM",
    "version": "1.0.0",
	"minimum-stability": "dev",
    "license": "BSD-3-Clause",
    "keywords": [
        "elixir",
        "database",
        "ORM"
    ],
    "homepage": "https://github.com/cedtanghe/elixir-db",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/cedtanghe/elixir-stdlib"
        },
        {
            "type": "vcs",
            "url": "https://github.com/cedtanghe/elixir-dispatcher"
        },
        {
            "type": "vcs",
            "url": "https://github.com/cedtanghe/elixir-di"
        }
    ],
    "require": {
        "php": ">=5.4",
        "elixir/elixir-stdlib": "*",
        "elixir/elixir-dispatcher": "*"
    },
    "require-dev": {
        "phpunit/PHPUnit": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "Elixir\\DB\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Elixir\\Test\\DB\\": "tests/"
        }
    },
    "suggest": {
        "elixir/elixir-di": "*"
    }
}